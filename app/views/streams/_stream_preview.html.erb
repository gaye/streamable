<div class="preview_image">
  <div class="image">
    <%= image_tag 'placeholder.jpeg' %>
    <!-- TODO (armaansarkar): video thumbnail -->
  </div>
  <% description = stream.description.split()[0..30].join(" ") + " ..." %>
  <%= link_to description, stream, :class => "preview_description" %>
</div>
<div class="preview_title">
  <%= link_to stream.title, stream %>
</div>
<div class="preview_publisher">
  <%= link_to stream.publisher.first_name + " "  + stream.publisher.last_name, stream.publisher %>    
</div>
<div class="preview_time">
  <%= format_time(stream.when) %>    
</div>
