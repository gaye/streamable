<div class="preview_image">
  <div class="image">
    <%= image_tag stream.zencoder_thumbnail_url %>
    <!-- TODO (armaansarkar): video thumbnail -->
  </div>
  
  <%= link_to truncate_to_words(stream.description, 240), stream, :class => 'preview_description' %>
</div>

<div class="preview_title">
  <%= link_to stream.title, stream %>
</div>

<div class="preview_publisher">
  <%= link_to format_name(stream.publisher), stream.publisher %>    
</div>

<div class="preview_time">
  <%= format_time(stream.when) %>    
</div>
